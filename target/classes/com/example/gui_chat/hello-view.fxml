<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="300" prefWidth="600" style="-fx-background-color: #f9e4b8;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gui_chat.HelloController">
    <TextArea fx:id="ONLINE" editable="false" prefWidth="150" />
    <VBox alignment="CENTER" prefHeight="300" prefWidth="450">
    <TextArea fx:id="textArea" editable="false" prefHeight="250" prefWidth="450" style="-fx-control-inner-background: #e0e0e0; -fx-text-inner-color: #600e00;">
      <font>
         <Font name="Verdana" size="14.0" />
      </font></TextArea>
    <HBox>
        <TextField fx:id="textField" prefHeight="25" prefWidth="275" promptText="Введите сообщение..."/>
        <Button onAction="#send" prefHeight="25" prefWidth="125" style="-fx-background-color: #663b1f;" text="Отправить">
         <textFill>
            <RadialGradient centerX="0.508888922797309" centerY="0.5267175499719517" radius="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="1.0" green="0.2350432276725769" blue="0.03999999910593033" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </RadialGradient>
         </textFill>
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font></Button>
    </HBox>
    <Button onAction="#connect" prefHeight="25" prefWidth="450" style="-fx-background-color: #663b1f;" text="Подключиться" textAlignment="CENTER">
      <textFill>
         <RadialGradient centerX="0.508888922797309" centerY="0.5267175499719517" radius="1.0">
            <stops>
               <Stop>
                  <color>
                     <Color red="1.0" green="0.2350432276725769" blue="0.03999999910593033" />
                  </color>
               </Stop>
               <Stop offset="1.0">
                  <color>
                     <Color red="1.0" green="1.0" blue="1.0" />
                  </color>
               </Stop>
            </stops>
         </RadialGradient>
      </textFill>
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>

    </VBox>
</HBox>
